{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "types": ["svelte", "@sveltejs/kit"]
  },
  "include": ["src/**/*", "svelte.config.js", "vite.config.ts", ".svelte-kit/ambient.d.ts"],
  "exclude": ["node_modules", "dist"],
  "extends":  "./.svelte-kit/tsconfig.json"
}