{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "types": ["svelte"]
  },
  "include": ["src/**/*", "svelte.config.js", "vite.config.ts"],
  "exclude": ["node_modules", "dist", ".svelte-kit"],
  "extends":  "./.svelte-kit/tsconfig.json"
}